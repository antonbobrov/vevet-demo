  <h2 class="m-0">With `auto` fps</h2>

  <div class="py-3 d-flex flex-row justify-content-start align-items-center gap-1">
    <button type="button" class="btn btn-primary js-play">Play</button>

    <button type="button" class="btn btn-primary js-pause">Pause</button>
  </div>

  <ul class="list-group">
    <li class="list-group-item js-target-fps"></li>
    <li class="list-group-item js-computed-fps"></li>
    <li class="list-group-item js-fps-multiplier"></li>
    <li class="list-group-item js-time"></li>
  </ul>
</div>

