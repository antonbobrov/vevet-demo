<!-- Application -->

<h1 class="m-0 mb-4">Application</h1>

<h2 class="m-0"><b class="px-2 text-white bg-dark">vevet.</b></h2>

<div class="py-3 d-flex flex-row justify-content-start align-items-center">
  <button type="button" class="btn btn-primary" id="update-vevet">Update</button>

  <div class="lead px-2">Properties:</div>
</div>

<ul class="list-group">
  <li class="list-group-item" id="browserName"></li>
  <li class="list-group-item" id="isDesktop"></li>
  <li class="list-group-item" id="isMobile"></li>
  <li class="list-group-item" id="isPageLoaded"></li>
  <li class="list-group-item" id="isPhone"></li>
  <li class="list-group-item" id="isTablet"></li>
  <li class="list-group-item" id="isWebpSupported"></li>
  <li class="list-group-item" id="osName"></li>
  <li class="list-group-item" id="prefix"></li>
  <li class="list-group-item" id="version"></li>
  <li class="list-group-item" id="props"></li>
</ul>

<div class="py-3 d-flex flex-row justify-content-start align-items-center">
  <div class="lead px-2">Methods:</div>
</div>

<ul class="list-group">
  <li class="list-group-item"><i>onPageLoad</i></li>
</ul>

<!-- Viewport -->

<h2 class="m-0 my-4"><b class="px-2 text-white bg-dark">vevet.viewport.</b></h2>

<div class="py-3 d-flex flex-row justify-content-start align-items-center">
  <div class="lead px-2">Properties:</div>
</div>

<ul class="list-group" id="viewport-list">
  <li class="list-group-item" id="dpr"></li>
  <li class="list-group-item" id="height"></li>
  <li class="list-group-item" id="isDesktop"></li>
  <li class="list-group-item" id="isLandscape"></li>
  <li class="list-group-item" id="isPhone"></li>
  <li class="list-group-item" id="isPortrait"></li>
  <li class="list-group-item" id="isTablet"></li>
  <li class="list-group-item" id="lowerDpr"></li>
  <li class="list-group-item" id="radius"></li>
  <li class="list-group-item" id="vh"></li>
  <li class="list-group-item" id="vr"></li>
  <li class="list-group-item" id="vw"></li>
  <li class="list-group-item" id="width"></li>
</ul>

<!-- Callbacks -->

<h2 class="m-0 my-4"><b class="px-2 text-white bg-dark">vevet.viewport.callbacks.</b></h2>

<ul class="list-group">
  <li class="list-group-item"><i>vevet.viewport.callbacks.add</i></li>
  <li class="list-group-item"><i>vevet.viewport.callbacks.get</i></li>
  <li class="list-group-item"><i>vevet.viewport.callbacks.remove</i></li>
</ul>
  
